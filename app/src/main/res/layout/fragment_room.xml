<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        app:srcCompat="@drawable/anastasia" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/anastasia" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/dmitry_96" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/kirill" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/dmitriy" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/tvRoomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="豪華雙人間"
            android:textColor="#243757"
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/tvRoomName"
            android:text="$2680"
            android:textColor="#DD71B4"
            android:textSize="24dp" />

        <RatingBar
            android:progressTint="#709ACF"
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:maxHeight="12dp"
            android:numStars="5"
            android:rating="2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/single_bed" />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ivBed"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/ivBed"
            android:text="X2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvRmFacilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCount"
            android:layout_marginTop="15dp"
            android:text="客房設施"
            android:textColor="#243757"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:background="#E8FFC4"
            android:id="@+id/tvFacilitiesDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRmFacilities"
            android:layout_marginTop="15dp"
            android:text="景觀, 電話, 衛星頻道, 有線頻道, 平面電視, 保險箱, 空調, 熨斗, 書桌, 燙衣設備, 休息區, 地毯, 衣櫃/衣櫥, 淋浴, 浴缸, 吹風機, 免費盥洗用品, 洗手間, 浴室, 拖鞋, 冰箱, 電熱水壺, 喚醒服務"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <Button
            android:id="@+id/btOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="下訂" />

    </LinearLayout>

</LinearLayout>