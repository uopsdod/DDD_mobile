<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hotel_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#aaaaaa" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/pic_default"
        android:layout_marginBottom="1dp"/>

    <TextView
        android:id="@id/tvHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:elevation="3dp"
        android:text="福華飯店 單人房"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHotel"
        android:layout_centerHorizontal="true"
        android:elevation="3dp"
        android:text="500$"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:elevation="2dp">

        <ImageView
            android:layout_width="@dimen/width_hotel_image"
            android:layout_height="wrap_content"
            android:src="@drawable/star03_empty_32dp" />

        <ImageView
            android:layout_width="@dimen/width_hotel_image"
            android:layout_height="wrap_content"
            android:src="@drawable/star03_empty_32dp" />

        <ImageView
            android:layout_width="@dimen/width_hotel_image"
            android:layout_height="wrap_content"
            android:src="@drawable/star03_empty_32dp" />

        <ImageView
            android:layout_width="@dimen/width_hotel_image"
            android:layout_height="wrap_content"
            android:src="@drawable/star03_empty_32dp" />

        <ImageView
            android:layout_width="@dimen/width_hotel_image"
            android:layout_height="wrap_content"
            android:src="@drawable/star03_empty_32dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="@dimen/width_hotel_image"
            android:layout_height="wrap_content"
            android:src="@drawable/star03_32dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="@dimen/width_hotel_image"
            android:layout_height="wrap_content"
            android:src="@drawable/star03_32dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="@dimen/width_hotel_image"
            android:layout_height="wrap_content"
            android:src="@drawable/star03_32dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="@dimen/width_hotel_image"
            android:layout_height="wrap_content"
            android:src="@drawable/star03_32dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="@dimen/width_hotel_image"
            android:layout_height="wrap_content"
            android:src="@drawable/star03_32dp"
            android:visibility="invisible" />
    </LinearLayout>


</RelativeLayout>