<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="30dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingLeft="16dp">

        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="100dp">
            <android.support.v7.widget.CardView
                android:id="@+id/img_cardview"
                android:layout_alignBottom="@+id/bubble_block"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                card_view:cardCornerRadius="35dp"
                android:background="#F00">
            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/anastasia"
                android:visibility="visible" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/bubble_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Name"
                    android:textSize="18sp"/>
                <RelativeLayout
                    android:id="@+id/container_bubble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/partner_chat_left02"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="15dp"
                        android:autoLink="web"
                        android:text="ssssssssssssssssssssssss"
                        android:textColor="#3d3d3d"
                        android:textSize="22sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-100dp"
            android:layout_toRightOf="@id/text_container"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/text_container">

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="read"
                android:textColor="#ac90ff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:text="10:24PM"
                android:textColor="#acaab2"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>