    <RelativeLayout
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="right">


        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/img_cardview"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <LinearLayout
                android:id="@+id/data_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:text="read"
                        android:textColor="#ac90ff"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:layout_weight="1"
                        android:text="10:24PM"
                        android:textColor="#acaab2"
                        android:textSize="18sp" />
                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/bubble_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:textSize="0sp" />

                <RelativeLayout
                    android:id="@+id/container_bubble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/partner_chat_right02"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="35dp"
                        android:autoLink="web"
                        android:text="1"
                        android:textColor="#3d3d3d"
                        android:textSize="22sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/img_cardview"
            android:layout_alignBottom="@+id/text_container"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            card_view:cardCornerRadius="35dp"
            android:background="#F00">

        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/anastasia"
            android:visibility="visible" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>
