<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:text="Unread"
            android:textColor="#ac90ff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:text="10:24PM"
            android:textColor="#acaab2"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_gravity="right"
                android:layout_marginRight="0dp"
                android:text="SenderName"
                android:textSize="18sp"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/container_bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"

                android:background="@drawable/partner_chat_right02">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="45dp"
                    android:autoLink="web"
                    android:gravity="right"
                    android:text="testttttttttttttttttttttttttttttt"
                    android:textColor="#3d3d3d"
                    android:textSize="22sp" />
            </RelativeLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="23dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sendbird_ic_launcher"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>
