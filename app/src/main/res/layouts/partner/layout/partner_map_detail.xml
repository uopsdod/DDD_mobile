<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <ImageView
        android:id="@+id/map_image_view_avatar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar_profile"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        tools:src="@drawable/andriy" />

    <LinearLayout
        android:id="@+id/wrapper_profile_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/map_image_view_avatar"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/map_text_view_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="SOPHIA" />

        <TextView
            android:id="@+id/map_text_view_profile_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/gray"
            android:textSize="14sp"
            tools:text="some info" />

    </LinearLayout>

    <include
        android:id="@+id/map_button_profile"
        layout="@layout/map_button_round_msg"
        android:layout_width="@dimen/size_button_message"
        android:layout_height="@dimen/size_button_message"
        android:layout_marginBottom="29dp"
        android:visibility="visible"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignBottom="@+id/wrapper_profile_details"
        android:layout_alignRight="@+id/wrapper_profile_details"
        android:layout_alignEnd="@+id/wrapper_profile_details" />


</RelativeLayout>
